// Hijack embedded form submit to throw up custom thank you
$("#mc-embedded-subscribe-form").on("submit", function(){
  var emailreg = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
  var val = $("#mce-EMAIL").val();
  if(val.match(emailreg)){
    $(".footer .email-wrapper").fadeOut(300, function(){
      $(".thank-you-wrapper").fadeIn(200, function(){
        $(".submit-animation").addClass("run");
        $(".footer #mc_embed_signup .response")[0].setAttribute('style', 'display:block !important');
        setTimeout(function(){
          $(".footer #mc_embed_signup #mc-embedded-subscribe-form input").val("");
          $(".thank-you-wrapper").fadeOut(200, function(){
            $(".submit-animation.run").removeClass("run");
            $(".footer .email-wrapper").fadeIn(300);
          });
        }, 2000);
      });
    });
  } else {
    
  }
});
  
var images = new Array();
function preload() {
    for (i = 0; i < preload.arguments.length; i++) {
        images[i] = new Image()
        images[i].src = preload.arguments[i]
    }
}
preload(
