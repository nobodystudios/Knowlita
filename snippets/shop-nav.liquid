	font-size: 28px;
	height: 30px;
	line-height: 30px;
	position: relative;
	text-align: right;
	margin-top: -30px;
	width: 30px;
	float: right;
}

.transparent {
	background-color: transparent!important;
}


#mc_embed_signup_nav #mce-EMAIL{
	border: 0;
	border-bottom: 2px solid #e7e7e1;
	width: 100%;
	padding-left: 0;
}
.shop-nav-hover {
	display: none;
  width: 50%;
  min-height: 300px;
  position: absolute;
  background-size: cover;
}
.shop-nav-title-active {
	display: none;
	margin-top: 4px;
