<style>
.shop ,.about {
	z-index: 99999;
	padding-left: 7px!important;
	letter-spacing: 2px!important;
}
.shop-nav {
	position: fixed;
	font-size: 20px;
	color: red;
	z-index: 591;
	width: 50%;
	text-align: center;
	padding: 0;
	height: auto;
	background-color: white;
	list-style-type: none;
	margin: 0;
	overflow-y: scroll;
	height: 100vh;
	-webkit-transition: margin 0.5s; /* For Safari 3.1 to 6.0 */
	transition: margin 0.5s;
}
.shop-nav::-webkit-scrollbar {
	display: none;
}

.hide-nav {
	margin-left: -50%;
}
.shop-nav li {
	text-align: center;
	min-height: 300px;
	/*display: inline-block;*/
	display: table;
	float: left;
	height: 25%;
	list-style-type: none;
	width: 50%;
	background-size: cover;
}
.shop-nav li:hover .shop-nav-hover {
	display: block;
}
.shop-nav .full-width .shop-nav-title {
	font-size: 26px;
	letter-spacing: 3.2px;
}
.shop-nav .shop-nav-title {
	font-size: 17px;
	letter-spacing: 2.2px;
}

.shop-nav .has-hover:hover {
	background-size: 0 0;
}


.shop-nav .full-width {
	width: 100%!important;
}

.shop-nav .shop-nav-title {
	display: table-cell;
	opacity: 0;
	vertical-align: middle;
	color: white;
	font-weight: bold;
	letter-spacing: 1.6px;
	text-align: center;
	color: #ffffff;
	-webkit-transition: opacity 0.5s ease-in;
       -moz-transition: opacity 0.5s ease-in;
        -ms-transition: opacity 0.5s ease-in;
         -o-transition: opacity 0.5s ease-in;
            transition: opacity 0.5s ease-in;
}

.shop-nav .show-title {
	opacity: 1;
}

.no-scroll {
	overflow: hidden;
}
@media all and (max-width: 640px){
	.no-scroll {
		overflow: hidden;
		position:fixed;
	}
}


.unclickable {
	color: #5b5b5b!important;
	/*pointer-events: none!important;*/
}

.blur {
	opacity: 0.75;
}

.shop-nav-mobile {
	display: none;
	height: 100vh;
	overflow-x: hidden;
	overflow-y: scroll;
	padding: 70px 30px 30px 30px;
	-webkit-overflow-scrolling: touch;
	/*position: fixed;
	background-color: white;
	top: 0;
	z-index: 1;*/
}

.shop-nav-mobile .shop-nav-mobile-dropdown .shop-nav-title{
	color: black;
  text-decoration: none;
  font-style: normal;
  font-size: 14px;
  font-family: Helvetica;
  letter-spacing: normal;
  font-weight: normal;
}

.shop-nav-mobile-dropdown {

}

.shop-nav-mobile button{
	min-width: 60px;
	min-height: 15px;
	font-size: 17px;
	letter-spacing: 2.5px;
	font-weight: 700;
	margin-top: 30px;

}
.shop-nav-mobile ul{
	padding: 0 0 30px 0;
	margin: 0;
}
.shop-nav-mobile ul li{
	list-style-type: none;
	padding-top: 25px;
	font-size: 16px;
	text-decoration: none;
}

.shop-nav-mobile ul li:hover {
	cursor: pointer;
}

.black {
	color: black!important;
}

@media all and (max-width: 640px){
	.desktop-nav {
		display: none;
	}
}.shop-nav-mobile-about {
	margin-bottom: 30px;
}

hr {
	box-sizing: content-box; */
