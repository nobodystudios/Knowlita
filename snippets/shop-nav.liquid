<div class="black-overlay"></div>
<ul class="shop-nav hide-nav">
	{% for link in linklists.navigation.links %}
		<a href="{{link.url}}">
			<li data-hover="{{link.object.metafields.navigation.shopimagehover}}" data-image="{{link.object.metafields.navigation.shopimage}}" class="{% if link.object.metafields.navigation.full == 'true' %}full-width {% endif %}{% if link.object.metafields.navigation.shopimagehover %} has-hover {%endif%}" style="background-image: url('{{link.object.metafields.navigation.shopimage}}')">
				{% if link.object.metafields.navigation.shopimagehover %}
					<div class="shop-nav-hover {% if link.object.metafields.navigation.full == 'true' %}full-width{% endif %}" style="background-image: url('{{link.object.metafields.navigation.shopimagehover}}')"></div>
				{% endif %}
				<div class="shop-nav-title">
					{{link.title}}
				</div>
			</li>
		</a>
	{% endfor %}
</ul>

<div class="shop-nav-mobile">
	<hr>
	<button type="button shop-nav-mobile-button" name="button">Shop</button>
	<ul class="shop-nav-mobile-dropdown">
		{% for link in linklists.navigation.links %}
			<a href="{{link.url}}">
				<li>
					<div class="shop-nav-title">
						{{link.title}}
					</div>
				</li>
			</a>
		{% endfor %}
	</ul>

	<hr>
	<button type="button" name="button shop-nav-mobile-about" style="margin-bottom:30px;" onclick="$('.about').click()">About</button>
	<hr>

	<div id="mc_embed_signup_nav" style="max-width: calc(100% - 200px);margin-bottom:50px;">
    <form action="//knowlita.us6.list-manage.com/subscribe/post?u=11dc9e1acab61ce95a8f5abd3&amp;id=9ba4591bff" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate="novalidate">
      <div id="mc_embed_signup_scroll">

        <div class="mc-field-group">
          <input type="email" value="" name="EMAIL" class="required email" placeholder="Email Sign-up. Never Spam, Fam." text="test" id="mce-EMAIL" aria-required="true">
						<div class="arrow">→</div>
					</input>
        </div>
        <div id="mce-responses" class="clear">
          <div class="response" id="mce-error-response" style="display:none"></div>
          <div class="response" id="mce-success-response" style="display:none"></div>
        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_11dc9e1acab61ce95a8f5abd3_9ba4591bff" tabindex="-1" value=""></div>
        <div class="clear" style="display:none;">
          <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
        </div>
      </div>
    </form>
  </div>
</div>
